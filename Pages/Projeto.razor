<br/>
<MudGrid>
    <a class="espaco" href="/projeto/chavepublica">
        <MudTooltip Text="Chave pública">
            <MudItem Class="carta">
                <div style="margin-left: auto; margin-right: auto; padding-right: 18px">
                    <MudIcon Style="color: white; margin-bottom: 14px; margin-right: 2px" Icon="@Icons.Filled.VpnKey"></MudIcon>
                    <MudIcon Style="color: white; transform: scale(1.9)" Icon="@Icons.Filled.Public"></MudIcon>
